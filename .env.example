# ==============================================
# BOT CONFIGURATION (REQUIRED)
# ==============================================

# Get from @BotFather on Telegram
# Example: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-1234567
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Get from @userinfobot on Telegram
# Example: 123456789
OWNER_ID=123456789

# Your Telegram username (without @)
# Example: myusername
SUPPORT_USERNAME=YourUsername

# ==============================================
# GOOGLE DRIVE CONFIGURATION (OPTIONAL)
# ==============================================

# Enable/Disable Google Drive backup
# Options: true or false
GDRIVE_ENABLED=true

# Google Service Account JSON (single line, no line breaks)
# Get from: https://console.cloud.google.com/
# Example: {"type":"service_account","project_id":"your-project-123",...}
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"abc123","private_key":"-----BEGIN PRIVATE KEY-----\nYourKey\n-----END PRIVATE KEY-----\n","client_email":"bot@project.iam.gserviceaccount.com","client_id":"123456789","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/bot%40project.iam.gserviceaccount.com"}

# Google Drive folder ID where videos will be stored
# Get from folder URL: https://drive.google.com/drive/folders/THIS_IS_THE_ID
# Example: 1a2b3c4d5e6f7g8h9i0j
GDRIVE_FOLDER_ID=1a2b3c4d5e6f7g8h9i0j

# ==============================================
# NOTES
# ==============================================
# 1. Never share these credentials publicly
# 2. Keep BOT_TOKEN and GOOGLE_CREDENTIALS_JSON secure
# 3. For Render deployment, add these as environment variables
# 4. GOOGLE_CREDENTIALS_JSON must be single line (no line breaks)
